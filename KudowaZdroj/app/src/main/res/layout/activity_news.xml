<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.news.NewsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:text="11.10.2020"/>

            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_below="@+id/news_date"
                android:layout_marginTop="20dp"
                android:textSize="30sp"
                android:textColor="@color/colorTitle"
                android:text="Dekarbonizacja 2030"/>

            <ImageView
                android:id="@+id/news_image_1"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:layout_below="@+id/news_title"
                android:layout_centerHorizontal="true"
                android:src="@drawable/news"
                android:scaleType="centerCrop"
                android:layout_margin="16dp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/news_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_image_1"
                android:justificationMode="inter_word"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:text="@string/news_txt"/>

            <ImageView
                android:id="@+id/news_image_2"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:layout_below="@+id/news_text_1"
                android:src="@drawable/about_kudowa_image_1"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/news_image_3"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:layout_below="@+id/news_image_2"
                android:src="@drawable/about_kudowa_image_1"
                android:padding="8dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>