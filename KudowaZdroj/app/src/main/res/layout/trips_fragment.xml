<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCardBackgroundDark"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trips_fragment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="28sp"
            android:maxLines="2"
            android:autoSizeTextType="uniform"
            android:textStyle="italic"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="32dp"
            android:textColor="#000"
            android:text="Nie masz jeszcze Å¼adnej wycieczki w planach."/>


        <GridView
            android:id="@+id/gridTrips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:numColumns="1"
            android:stretchMode="columnWidth"></GridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addTripImage"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/add_trip"/>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>