<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/colorCardBackgroundDark"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAccommodation"
            app:cardCornerRadius="20dp"
            app:cardMaxElevation="20dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/imageAccommodation"
                    android:scaleType="centerCrop"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/about_kudowa_image_2" />

                <TextView
                    android:id="@+id/accommodation_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/imageAccommodation"
                    android:fontFamily="@font/playfair_display"
                    android:text="Hotel Verde Montana"
                    android:textColor="@color/colorTitle"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/accommodation_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imageAccommodation"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="40dp"
                    android:gravity="end"
                    android:layout_marginBottom="16dp"
                    android:textSize="16sp"
                    android:text="4,3 / 5"/>

                <ImageView
                    android:id="@+id/imageStar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/full_star_icon" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>