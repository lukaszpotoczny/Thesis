<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="#E8ECF6"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardRestaurants"
            app:cardCornerRadius="20dp"
            app:cardMaxElevation="20dp"
            android:layout_margin="4dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/imageRestaurants"
                    android:scaleType="centerCrop"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/restauracja" />

                <TextView
                    android:id="@+id/restaurant_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageRestaurants"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="Czeska Restauracja Zdrojowa"/>

                <TextView
                    android:id="@+id/restaurant_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/restaurant_text_1"
                    android:layout_toRightOf="@id/imageRestaurants"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="14sp"
                    android:text="ul. Zdrojowa 8"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>