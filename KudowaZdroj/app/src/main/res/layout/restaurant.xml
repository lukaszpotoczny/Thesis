<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:background="@color/colorCardBackground"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardRestaurants"
            app:cardCornerRadius="20dp"
            app:cardMaxElevation="20dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/imageRestaurants"
                    android:scaleType="centerCrop"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/restauracja" />

                <TextView
                    android:id="@+id/restaurant_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageRestaurants"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="Czeska Restauracja Zdrojowa"/>

                <TextView
                    android:id="@+id/restaurant_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/restaurant_text_1"
                    android:layout_toRightOf="@id/imageRestaurants"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="14sp"
                    android:text="ul. Zdrojowa 8"/>

                <TextView
                    android:id="@+id/restaurant_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/restaurant_text_1"
                    android:layout_toRightOf="@id/restaurant_text_2"
                    android:gravity="end"
                    android:layout_alignParentRight="true"
                    android:textStyle="italic"
                    android:textColor="#33CC09"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="30dp"
                    android:textSize="16sp"
                    android:text="Otwarte"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>