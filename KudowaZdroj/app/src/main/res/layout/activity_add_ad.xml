<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corkboard"
    tools:context=".ui.ad.AddAdActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBackground"
        app:cardCornerRadius="35dp"
        app:cardMaxElevation="20dp"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="24dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorTitle"
        android:layout_width="52dp"
        android:layout_height="52dp">
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAdGoBack"
        app:cardCornerRadius="32dp"
        app:cardMaxElevation="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#F3F3F3"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/back_arrow"/>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddAdActivity"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/add_ad_info_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/playfair_display"
                        android:gravity="center"
                        android:text="Dodaj ogłoszenie"
                        android:textColor="@color/colorTitle"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/add_ad_info_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/add_ad_info_1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="30dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/open_sans"
                        android:text="Tytuł:"/>

                    <EditText
                        android:id="@+id/add_ad_edit_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:layout_below="@id/add_ad_info_2"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="1dp" />

                    <TextView
                        android:id="@+id/add_ad_info_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/add_ad_edit_1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/open_sans"
                        android:text="Treść ogłoszenia:"/>

                    <EditText
                        android:id="@+id/add_ad_edit_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="start|top"
                        android:layout_below="@id/add_ad_info_3"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:inputType="textMultiLine" />

                    <TextView
                        android:id="@+id/add_ad_info_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/add_ad_edit_2"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/open_sans"
                        android:text="Autor:"/>

                    <EditText
                        android:id="@+id/add_ad_edit_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:layout_below="@id/add_ad_info_4"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="1dp" />

                    <TextView
                        android:id="@+id/add_ad_info_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/add_ad_edit_3"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/open_sans"
                        android:text="Dane kontaktowe:"/>

                    <EditText
                        android:id="@+id/add_ad_edit_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:layout_below="@id/add_ad_info_5"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="32dp"
                        android:layout_marginTop="1dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageAddAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardAddAdActivity"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/button_add_ad"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>