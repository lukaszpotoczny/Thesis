<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:background="@color/colorCardBackgroundDark"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTrips"
            app:cardCornerRadius="20dp"
            app:cardMaxElevation="20dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/tripTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="30dp"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:textColor="@color/colorTitle"
                    android:text="Wycieczka na sobotÄ™"/>

                <TextView
                    android:id="@+id/trips_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tripTitle"
                    android:layout_toRightOf="@id/imageClock"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:text="4:30 h"/>

                <TextView
                    android:id="@+id/trips_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trips_text_2"
                    android:layout_toRightOf="@id/imageDistance"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:text="4 miejsca"/>

                <ImageView
                    android:id="@+id/imageClock"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/tripTitle"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/time_icon" />

                <ImageView
                    android:id="@+id/imageDistance"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/imageClock"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/location_icon" />

                <ImageView
                    android:id="@+id/imageTrip_1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@+id/tripTitle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    android:src="@drawable/about_kudowa_image_2" />

                <ImageView
                    android:id="@+id/imageTrip_2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@+id/tripTitle"
                    android:layout_toLeftOf="@+id/imageTrip_1"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    android:src="@drawable/about_kudowa_image_1" />

                <ImageView
                    android:id="@+id/imageTrip_3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@+id/tripTitle"
                    android:layout_toLeftOf="@+id/imageTrip_2"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    android:src="@drawable/about_kudowa_image_2" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>