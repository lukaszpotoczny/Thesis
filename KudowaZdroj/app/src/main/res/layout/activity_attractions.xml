<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.attractions.AttractionsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/attr_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="176dp"
                >


                <ImageView
                    android:id="@+id/attr_image_1"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:src="@drawable/kaplica_czaszek"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="16dp"
                    android:padding="8dp"/>


                <TextView
                    android:id="@+id/attr_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="25sp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:background="#904f"
                    android:textColor="#ffffff"
                    android:text="Kaplica Czaszek"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageLocation"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/attr_layout_1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/location_icon" />

            <TextView
                android:id="@+id/attr_info_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attr_layout_1"
                android:layout_toRightOf="@id/imageLocation"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:text="ul. Zdrojowa 8"/>

            <ImageView
                android:id="@+id/imageTime"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/imageLocation"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/time_icon" />

            <TextView
                android:id="@+id/attr_info_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attr_info_1"
                android:layout_toRightOf="@id/imageTime"
                android:textStyle="bold"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:text="12:00 - 23:00"/>

            <ImageView
                android:id="@+id/imageWebsite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/imageTime"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/www_icon" />

            <TextView
                android:id="@+id/attr_info_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attr_info_2"
                android:layout_toRightOf="@id/imageWebsite"
                android:textStyle="bold"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:text="www.restauracja.pl"/>

            <TextView
                android:id="@+id/attr_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/attr_info_3"
                android:justificationMode="inter_word"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:text="@string/news_txt"/>

            <ImageView
                android:id="@+id/attr_image_2"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:layout_below="@+id/attr_text_1"
                android:src="@drawable/news"
                android:scaleType="centerCrop"
                android:layout_margin="16dp"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/attr_image_3"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                android:layout_margin="16dp"
                android:layout_below="@+id/attr_image_2"
                android:src="@drawable/about_kudowa_image_1"
                android:padding="8dp"/>

        </RelativeLayout>











    </ScrollView>

</RelativeLayout>