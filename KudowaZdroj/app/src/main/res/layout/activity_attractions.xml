<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCardBackgroundDark"
    tools:context=".ui.attractions.AttractionsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBackground"
        app:cardCornerRadius="35dp"
        app:cardMaxElevation="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorTitle"
        android:layout_width="52dp"
        android:layout_height="52dp">
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAttractionsGoBack"
        app:cardCornerRadius="32dp"
        app:cardMaxElevation="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#F3F3F3"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/back_arrow"/>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAttractionsActivity"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="32dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/attr_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                >


                <ImageView
                    android:id="@+id/attr_image_1"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/about_kudowa_image_1"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/attr_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:background="#904f"
                    android:textColor="#ffffff"
                    android:text="Kaplica Czaszek"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageLocation"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/attr_layout_1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/location_icon" />

            <TextView
                android:id="@+id/attr_info_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attr_layout_1"
                android:layout_toRightOf="@id/imageLocation"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:text="ul. Zdrojowa 8"/>

            <ImageView
                android:id="@+id/imageTime"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/imageLocation"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/time_icon" />

            <TextView
                android:id="@+id/attr_info_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attr_info_1"
                android:layout_toRightOf="@id/imageTime"
                android:textStyle="bold"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:text="12:00 - 23:00"/>

            <ImageView
                android:id="@+id/imageWebsite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/imageTime"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/www_icon" />

            <TextView
                android:id="@+id/attr_info_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attr_info_2"
                android:layout_toRightOf="@id/imageWebsite"
                android:textStyle="bold"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:text="www.restauracja.pl"/>

            <TextView
                android:id="@+id/attr_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/attr_info_3"
                android:justificationMode="inter_word"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:text="@string/news_txt"/>

            <ImageView
                android:id="@+id/attr_image_2"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:layout_below="@+id/attr_text_1"
                android:src="@drawable/about_kudowa_image_2"
                android:scaleType="centerCrop"
                android:layout_margin="16dp"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/attr_image_3"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                android:layout_margin="16dp"
                android:layout_below="@+id/attr_image_2"
                android:src="@drawable/about_kudowa_image_1"
                android:padding="8dp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>