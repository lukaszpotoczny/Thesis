<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:foregroundGravity="center_horizontal"
    android:gravity="center_horizontal"
    android:background="@color/colorCardBackground"
    android:layout_columnWeight="1"
    android:padding="8dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAttractions0"
        app:cardCornerRadius="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAttractions"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageAttraction"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/about_kudowa_image_1" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textAttraction"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textStyle="italic"
            android:maxLines="3"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="17sp"
            android:textColor="#000000"
            android:fontFamily="@font/playfair_display"
            android:layout_marginTop="4dp"
            android:text="KAPLICA CZASZEK"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>