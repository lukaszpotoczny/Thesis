<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCardBackgroundDark"
    tools:context=".ui.accommodation.AccommodationActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBackground"
        app:cardCornerRadius="35dp"
        app:cardMaxElevation="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorTitle"
        android:layout_width="52dp"
        android:layout_height="52dp">
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAccGoBack"
        app:cardCornerRadius="35dp"
        app:cardMaxElevation="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#F3F3F3"
        android:layout_width="50dp"
        android:layout_height="50dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/back_arrow"/>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAccActivity"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="32dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#F3F3F3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/acc_layout_1"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        >

                        <ImageView
                            android:id="@+id/accommodation_image_1"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/about_kudowa_image_1"
                            android:scaleType="centerCrop" />


                        <TextView
                            android:id="@+id/accommodation_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="#904f"
                            android:fontFamily="@font/playfair_display"
                            android:gravity="center"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="Hotel Verde Montana"
                            android:textColor="#ffffff"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imageStar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_below="@+id/acc_layout_1"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="28dp"
                        android:src="@drawable/full_star_icon" />

                    <TextView
                        android:id="@+id/accommodation_info_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/acc_layout_1"
                        android:layout_toLeftOf="@id/imageStar"
                        android:textStyle="bold"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"
                        android:text="4,3 / 5"/>

                    <ImageView
                        android:id="@+id/imageLocation"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_below="@+id/acc_layout_1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/location_icon" />

                    <TextView
                        android:id="@+id/accommodation_info_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/acc_layout_1"
                        android:layout_toRightOf="@id/imageLocation"
                        android:textStyle="bold"
                        android:layout_marginTop="31dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorLocation"
                        android:fontFamily="@font/playfair_display"
                        android:text="ul. Zdrojowa 8"/>

                    <ImageView
                        android:id="@+id/imageTime"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_below="@+id/imageLocation"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/www_icon" />

                    <TextView
                        android:id="@+id/accommodation_info_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/accommodation_info_1"
                        android:layout_toRightOf="@id/imageTime"
                        android:textStyle="bold"
                        android:layout_marginTop="23dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:autoLink="web"
                        android:maxLines="1"
                        android:autoSizeTextType="uniform"
                        android:textColorLink="@color/colorTitle"
                        android:fontFamily="@font/playfair_display"
                        android:text="verde.pl"/>

                    <ImageView
                        android:id="@+id/imageWebsite"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_below="@+id/imageTime"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/email_icon" />

                    <TextView
                        android:id="@+id/accommodation_info_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/accommodation_info_2"
                        android:layout_toRightOf="@id/imageWebsite"
                        android:textStyle="bold"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:autoLink="email"
                        android:textColorLink="@color/colorTitle"
                        android:fontFamily="@font/playfair_display"
                        android:text="verde@gmail.com"/>

                    <ImageView
                        android:id="@+id/imagePhone"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_below="@+id/imageWebsite"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/call_icon" />

                    <TextView
                        android:id="@+id/accommodation_info_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/accommodation_info_3"
                        android:layout_toRightOf="@id/imagePhone"
                        android:textStyle="bold"
                        android:layout_marginTop="23dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:autoLink="phone"
                        android:textColorLink="@color/colorTitle"
                        android:fontFamily="@font/playfair_display"
                        android:text="721 231 341"/>

                    <TextView
                        android:id="@+id/accommodation_text_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imagePhone"
                        android:justificationMode="inter_word"
                        android:layout_marginTop="10dp"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/rest_txt"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>